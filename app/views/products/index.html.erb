<h1>Products</h1>
<table>
<thead>
  <tr>
    <th>Name</th>
    <th>price</th>
    <th >Categories</th>
    <th></th>
  </tr>
</thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.categories.pluck(:name) %></td>
        <td>
          <span><%= link_to("Edit", edit_product_path(product))%></span>
          <span><%= link_to("Delete", product_path(product), 
                    method: :delete, 
                    data: { confirm: 'Estas seguro?'})%></span>
        </td>
      </tr>
    <% end %>
  </tbody>
  <h2><%= link_to("Crear Producto", new_product_path)%></h2>

</table>

